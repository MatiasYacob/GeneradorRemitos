<div class="container">
    <div class="row mt-5">
        {{#if personas}}
        <div class="col-md-12">
            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th>Nombre</th>
                        <th>Email</th>
                        <th>Edad</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each personas}}
                    <tr>
                        <td>{{name}}</td>
                        <td>{{email}}</td>
                        <td>{{age}}</td>
                        <td>
                            <div>
                                <a href="#" class="btn btn-warning">Editar</a>
                                <a href="#" class="btn btn-danger">Eliminar</a>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr class="table-dark text-center">
                        <td colspan="4">Registro de personas</td>
                    </tr>
                </tfoot>
            </table>
        </div>
        {{else}}
        <div class="card text-center mx-auto">
            <div class="card-body">
                <h5 class="card-title">No hay personas registradas</h5>
            </div>
        </div>
        {{/if}}
    </div>
</div>
