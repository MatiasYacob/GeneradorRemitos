<div class="container">
  {{#if personas}}
    <table class="personas-table">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Email</th>
          <th>Edad</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        {{#each personas}}
        <tr>
          <td>{{name}}</td>
          <td>{{email}}</td>
          <td>{{age}}</td>
          <td>
            <div class="acciones">
              <a href="#" class="btn warning">Editar</a>
              <a href="#" class="btn danger">Eliminar</a>
            </div>
          </td>
        </tr>
        {{/each}}
      </tbody>
      <tfoot>
        <tr>
          <td colspan="4">Registro de personas</td>
        </tr>
      </tfoot>
    </table>
  {{else}}
    <div class="card-empty">
      <h2>No hay personas registradas</h2>
    </div>
  {{/if}}
</div>
<style>
    .container {
  max-width: 960px;
  margin: 2rem auto;
  padding: 1rem;
}

.personas-table {
  width: 100%;
  border-collapse: collapse;
  text-align: center;
  font-size: 1rem;
  background-color: #fff;
}

.personas-table thead {
  background-color: #333;
  color: #fff;
}

.personas-table th,
.personas-table td {
  border: 1px solid #ccc;
  padding: 0.75rem;
}

.personas-table tfoot {
  background-color: #333;
  color: #fff;
  font-weight: bold;
}

.acciones {
  display: flex;
  gap: 0.5rem;
  justify-content: center;
}

.btn {
  text-decoration: none;
  padding: 0.4rem 0.8rem;
  border-radius: 4px;
  font-weight: bold;
  transition: background-color 0.2s ease;
}

.btn.warning {
  background-color: #ffc107;
  color: #000;
}

.btn.warning:hover {
  background-color: #e0a800;
}

.btn.danger {
  background-color: #dc3545;
  color: #fff;
}

.btn.danger:hover {
  background-color: #c82333;
}

.card-empty {
  margin: 2rem auto;
  text-align: center;
  padding: 2rem;
  border: 2px dashed #ccc;
  border-radius: 10px;
}

</style>